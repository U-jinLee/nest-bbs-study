<div class="board-header">
  <h1>게시판</h1>
  <div class="board-actions">
    <div class="search-box">
      <input type="search" name="search" placeholder="검색어를 입력하세요" value="{{search}}" />
      <button class="btn-search" type="button">검색</button>
    </div>
    <a href="/posts/write" class="btn-primary">글쓰기</a>
  </div>
</div>
{{#each data}}
  <div class="board-list">
    <div class="post-item">
      <div class="post-header">
        <h3 class="post-title">
          <a href="/posts/{{id}}">{{title}}</a>
        </h3>
        <span class="post-meta"><b>{{author}}</b> {{createdAt}}</span>
      </div>
      <p class="post-excerpt">{{title}}</p>
      <div class="post-footer">
        <span class="post-stats">댓글 {{comments.length}}</span>
        <span class="post-stats">조회 0</span>
      </div>
    </div>
{{/each}}
{{#unless data.length}}
  <div style="text-align:center;padding:28px;border-radius:8px;border:1px dashed rgba(15,23,42,0.04);color:var(--muted);">게시글이 없습니다.</div>
{{/unless}}

<div class="pagination">  
  <button class="page-btn" {{#unless hasPreviousPage}}disabled{{/unless}}>이전</button>
  <div class="page-numbers">
    <span class="page-number active">1</span>
    <span class="page-number">2</span>
    <span class="page-number">3</span>
    <span class="page-number">4</span>
    <span class="page-number">5</span>
  </div>
  <button class="page-btn" {{#unless hasNextPage}}disabled{{/unless}}>다음</button>
</div>
<style>
  .board-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .board-header h1 {
    margin: 0;
    font-size: 24px;
    font-weight: 700;
    color: var(--text);
  }

  .board-actions {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 8px;
    background: white;
    padding: 6px 12px;
    border-radius: 8px;
    border: 1px solid rgba(15, 23, 42, 0.08);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .search-box input {
    border: none;
    outline: none;
    padding: 6px;
    font-size: 14px;
    min-width: 200px;
  }

  .btn-search {
    border: 1px solid rgba(15, 23, 42, 0.08);
    background: var(--accent);
    color: var(--muted);
    padding: 6px 14px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.2s;
  }

  .btn-search:hover {
    background: #1d4ed8;
    color: white;
  }

  .btn-primary {
    border: 1px solid rgba(15, 23, 42, 0.08);
    background: var(--accent);
    color: var(--muted);
    padding: 8px 18px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .btn-primary:hover {
    background: #1d4ed8;
    color: white;
    transform: translateY(-1px);
  }

  .board-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .post-item {
    background: white;
    padding: 20px;
    border-radius: 10px;
    border: 1px solid rgba(15, 23, 42, 0.06);
    transition: all 0.2s;
    cursor: pointer;
  }

  .post-item:hover {
    border-color: var(--accent);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.08);
    transform: translateY(-2px);
  }

  .post-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
    gap: 12px;
  }

  .post-title {
    margin: 0;
    font-size: 17px;
    font-weight: 700;
  }

  .post-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .post-title a:hover {
    color: var(--accent);
  }

  .post-meta {
    color: var(--muted);
    font-size: 13px;
    white-space: nowrap;
  }

  .post-excerpt {
    margin: 0 0 12px;
    color: var(--muted);
    font-size: 14px;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-footer {
    display: flex;
    gap: 16px;
    padding-top: 8px;
    border-top: 1px solid rgba(15, 23, 42, 0.04);
  }

  .post-stats {
    color: var(--muted);
    font-size: 13px;
  }

  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-top: 32px;
  }

  .page-btn {
    background: white;
    border: 1px solid rgba(15, 23, 42, 0.08);
    padding: 8px 16px;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s;
  }

  .page-btn:hover:not(:disabled) {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
  }

  .page-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .page-numbers {
    display: flex;
    gap: 6px;
  }

  .page-number {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  .page-number:hover {
    background: rgba(37, 99, 235, 0.1);
    color: var(--accent);
  }

  .page-number.active {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
  }

  @media (max-width: 640px) {
    .board-header {
      flex-direction: column;
      align-items: stretch;
    }

    .board-actions {
      flex-direction: column;
    }

    .search-box {
      width: 100%;
    }

    .search-box input {
      flex: 1;
      min-width: auto;
    }

    .post-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
<script type="text/javascript">
  document.querySelector('.btn-search').addEventListener('click', () => {
    const query = document.querySelector('.search-box input').value;
    if(!query.trim()) {return;}
    location.href = `/posts?search=${encodeURIComponent(query)}`;
  });
</script>