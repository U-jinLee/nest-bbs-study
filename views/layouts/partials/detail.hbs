<div class="post-detail">
  <header class="post-header">
    <div class="post-title-section" data-id="{{post.id}}">
      <h1 class="post-title">{{post.title}}</h1>
      <div class="post-meta">
        <span class="meta-item">작성자: <b>{{post.author}}</b></span>
        <span class="meta-divider">|</span>
        <span class="meta-item">작성일: {{post.createdAt}}</span>
        <span class="meta-divider">|</span>
        <span class="meta-item">수정일: {{post.updatedAt}}</span>
        <span class="meta-divider">|</span>
        <span class="meta-item">조회 128</span>
      </div>
    </div>
    <div class="post-actions">
      <button class="btn-edit">수정</button>
      <button class="btn-delete">삭제</button>
    </div>
  </header>

  <div class="post-content">
    <p>{{post.content}}</p>
  </div>
  <div class="comment-section">
    <h2 class="section-title">댓글 <span class="comment-count">{{comments.length}}</span></h2>
    {{#each comments}}
      <div class="comment-list">
        <div class="comment-item">
          <div class="comment-header">
            <div class="comment-author">
              <div class="avatar" aria-hidden="true"></div>
              <span class="author-name">{{author}}</span>
            </div>
            <span class="comment-date">{{createdAt}}</span>
          </div>
          <div class="comment-content">
            {{content}}
          </div>
          <div class="comment-actions">
            <button class="btn-comment-delete">삭제</button>
          </div>
        </div>
    {{/each}}
    <div class="comment-form">
      <h3 class="form-title">댓글 작성</h3>
      <div class="form-group">
        <input type="text" class="form-input" placeholder="닉네임 (선택사항)" />
      </div>
      <div class="form-group">
        <textarea class="form-textarea" placeholder="댓글을 입력하세요" rows="3"></textarea>
      </div>
      <div class="form-actions">
        <button class="btn-submit">댓글 등록</button>
      </div>
    </div>
  </div>

  <div class="post-footer">
    <a href="/posts" class="btn-back">← 목록으로</a>
  </div>
</div>
<link rel="stylesheet" href="/detail.css">
<script type="text/javascript">
  document.querySelector('.btn-submit').addEventListener('click', function() {
    const author = document.querySelector('.form-input').value;
    const content = document.querySelector('.form-textarea').value;
    const postId = document.querySelector('.post-title-section').getAttribute('data-id');

    fetch(`/api/posts/${postId}/comments`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        content: content,
        author: author,
      })
    }).then(response => {
      if (response.ok) {
        alert('댓글이 등록되었습니다.');
        window.location.reload();
      } else {
        alert('댓글 등록에 실패하였습니다.');
      }
    });
  })

  document.querySelector('.btn-delete').addEventListener('click', function() {
    if (confirm('이 게시물을 삭제하시겠습니까?')) {
      //data-id 속성에서 게시물 ID 가져오기
      const id = document.querySelector('.post-title-section').getAttribute('data-id');
      // 삭제 로직 구현
      fetch(`/api/posts/${id}`, {
        method: 'DELETE'
      })
      .then(response => {
        if (response.ok) {
          alert('게시물이 삭제되었습니다.');
          window.location.href = '/posts';
        } else {
          alert('게시물 삭제에 실패하였습니다.');
        }
      });
    }
  });

  document.querySelectorAll('.btn-comment-delete').forEach(button => {
    button.addEventListener('click', () => {
      if (confirm('이 댓글을 삭제하시겠습니까?')) {
        const commentItem = button.closest('.comment-item');
        const commentIndex = Array.from(document.querySelectorAll('.comment-item')).indexOf(commentItem);
        const postId = document.querySelector('.post-title-section').getAttribute('data-id');
        
        fetch(`/api/posts/${postId}/comments/${commentIndex}`, {
          method: 'DELETE'
        })
        .then(response => {
          if (response.ok) {
            alert('댓글이 삭제되었습니다.');
            window.location.reload();
          } else {
            alert('댓글 삭제에 실패하였습니다.');
          }
        });

      }
    })
  })
</script>